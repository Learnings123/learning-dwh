create view gold.dim_customers as 

select
 row_number() over(order by cst_id) as customer_key,
 A.cst_id as customer_id,
A.cst_key as customer_number,
A.cst_firstname as first_name,
A.cst_lastname as last_name,
C.bdate as birthdate,
A.cst_marital_status as marital_status,
case  when A.cst_gndr!='n/a' then A.cst_gndr
      else
      coalesce(C.gen,'n/a') 
      end as gender,
A.cst_create_date as create_date,
B .cntry as country
from [silver].[crm_cust_info] A left join [silver].[erp_loc_a101] B
on A.cst_key=B.cid
left join [silver].[erp_cust_az12] C on
A.cst_key=C.cid;



create view gold.dim_products as
select 
row_number()over(order by A.prd_start_dt,A.prd_key) as product_key,
A.prd_id as product_id,
A.prd_key as product_number,
A.prd_nm as product_name,
A.cat_id as category_id,
B.cat as category,
B.subcat as sub_category,
A.prd_cost as product_cost,
A.prd_line as product_line,
A.prd_start_dt as start_date,
B.maintenance  as maintanance
from [silver].[crm_prd_info] A left join [silver].[erp_px_cat_g1v2] B
on A.cat_id =B.id where A.prd_end_dt is null





create view gold.fact_sales as
select sls_ord_num as order_number,
B.product_key as product_key,
C.customer_key as customer_key,
sls_order_dt as order_date,
sls_ship_dt as shipping_date,
sls_due_dt as due_date,
sls_sales as sales,
sls_quantity as Quantity,
sls_price as price
from [silver].[crm_sales_details] A left join gold.dim_products B 
on A.sls_prd_key = B.product_number left join gold.dim_customers C
on A.sls_cust_id = C.customer_id

